mixin menuLink(title, link='#')
     li.header-menu-item 
        a.header-menu-link(href= link)= title 
    
mixin headerBottomItem(number,text)
     .header-bottom-item
        span.header-bottom-number= number
        span.header-bottom-text= text 


mixin blockHeader(caption, title, decs)
    .block-header
        h3.block-header-caption= caption 
        h2.block-header-title= title 
        if decs 
            p.block-header-decs= decs 

mixin aboutItem(srcImg,aboutTitle,aboutIcon)
     .about-item 
        img.about-img(src= srcImg)
        .about-content 
            span.about-icon
                i(class= aboutIcon)
            span.about-title= aboutTitle 

mixin serviceItem(srcImg,serviceTitle,serviceDecs)
    .service-item 
        img.service-item-icon(src= srcImg )
        .service-item-info 
            h4.service-item-title= serviceTitle
            p.service-item-decs= serviceDecs

mixin wedoItem(itemIconSrc,itemTitle,itemText,is-active='')
     .wedo-item
        .wedo-item-header
            img.wedo-item-icon(src= itemIconSrc)
            h4.wedo-item-title= itemTitle
            i.wedo-item-arrow.fal.fa-angle-up 
        .wedo-item-content(class= is-active)
            .wedo-item-wrapper-text
                p.wedo-item-text= itemText

mixin quoteItem(data)
     .quote-item 
        .quote-content 
            if data.type=='icon'
                .quote-icon 
                    img(src= data.srcImg)
            else if data.type=='img'
                 .quote-img 
                    img(src= data.srcImg)
            .quote-info
                q.quote-text= data.quoteText
                span.quote-author= data.quoteAuthor

mixin ourteamSocial(hrefFb='',hrefTwitter='',hrefYoutube='',hrefIg='')
     ul.ourteam-content-list 
        li.ourteam-content-item
            a.ourteam-content-icon(href= hrefFb) 
                i.fab.fa-facebook-f
        li.ourteam-content-item
            a.ourteam-content-icon(href= hrefTwitter) 
                i.fab.fa-twitter
        li.ourteam-content-item
            a.ourteam-content-icon(href= hrefYoutube) 
                i.fab.fa-youtube
        li.ourteam-content-item
            a.ourteam-content-icon(href= hrefIg) 
                i.fab.fa-instagram

mixin ourteamItem(srcImg,authorName,authorDecs)
     .ourteam-item 
        .ourteam-social
            img.ourteam-img(src= srcImg)
            .ourteam-content 
                if block 
                    block
        .ourteam-info 
            p.ourteam-name= authorName
            span.ourteam-decs= authorDecs

mixin sponserItem(srcImg)
    li.sponser-item
        img.sponser-img(src= srcImg )  


mixin workItem(imgSrc,iconSrc,title,desc,itemFull='')
     .work-item(class= itemFull)
        img.work-img(src= imgSrc)
        .work-content 
            img.work-icon(src= iconSrc)
            .work-info
                h3.work-title= title
                p.work-desc.text.text--light.text--italic= desc
            //- img.work-img(src="images/img-work1.png", alt="")

mixin peopleItem(srcImg,name,position,text)
     .people-item 
        img.people-avatar(src= srcImg)
        .people-info 
            h3.people-name= name
            p.people-position.text.text--light.text--italic= position
            p.people-desc.text= text

mixin blogItem(srcImg,dateNumber,dateText,title,text,metaNumber)
    .blog-item
        .blog-media 
            img.blog-img(src= srcImg)
            .blog-date 
                p.blog-date-number= dateNumber 
                p.blog-date-text= dateText
        a.blog-title(href='#')= title
        .blog-desc
            p.blog-desc-inner.text= text
        .blog-meta
            .blog-meta-item 
                i.fas.fa-eye.blog-meta-icon
                span.blog-meta-number.text.text--italic= metaNumber
            .blog-meta-item 
                i.fas.fa-comments.blog-meta-icon
                span.blog-meta-number.text.text--italic= metaNumber